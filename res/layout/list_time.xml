<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="30dp"
    	android:layout_marginLeft="10dp"
    	android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/listsatrttime"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:layout_width="0dp"
			android:layout_marginTop="8dp"
			android:layout_weight="1"
			android:text="12:00"
            />
        <TextView 
            android:id="@+id/listtype"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:layout_width="0dp"
			android:layout_weight="2"
			android:layout_marginTop="5dp"
			android:text="国语2d"
            />
                <TextView 
            android:id="@+id/listprice"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_marginTop="5dp"
			android:textColor="@color/textcolor_red_d"
			android:text="14"
			android:gravity="right"
            />
             <TextView 
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_width="wrap_content"
			android:layout_marginTop="5dp"
			android:textColor="@color/textcolor_red_d"
			android:text="元"
			android:layout_marginRight="15dp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="30dp"
    	android:layout_marginLeft="10dp"
    	android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/listendtime"
			android:layout_height="wrap_content"
			android:textSize="12sp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:text="12:00散场"
			android:textColor="@color/background_bg3"
            />
        <TextView 
            android:id="@+id/listhall"
			android:layout_height="wrap_content"
			android:textSize="12sp"
			android:layout_width="0dp"
			android:layout_weight="2"
			android:text="6haoting"
			android:textColor="@color/background_bg3"
            />
                <TextView 
            android:id="@+id/listtejia"
			android:layout_height="wrap_content"
			android:textSize="12sp"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:textColor="@color/background_bg3"
			android:text="影院价34"
			android:gravity="right"
            />
             <TextView 
			android:layout_height="wrap_content"
			android:textSize="12sp"
			android:layout_width="wrap_content"
			android:textColor="@color/background_bg3"
			android:text="元"
			android:layout_marginRight="15dp"
            />
    </LinearLayout>
    
    
</LinearLayout>
