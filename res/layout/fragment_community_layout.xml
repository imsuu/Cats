<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cats="http://schemas.android.com/apk/res/com.demo.cats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/background_bg1"
        android:gravity="center" >

        <com.cats.weights.TitleTabBar
            android:id="@+id/community_topBar"
            android:layout_width="@dimen/top_title_bar_sum_width"
            android:layout_height="@dimen/top_title_bar_height"
            cats:titleSourceId="@array/community_title" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/contentPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

</LinearLayout>