<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_bg1"
        android:orientation="horizontal" >
        <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_weight="1">
         <ImageView
            android:id="@+id/movieback"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/movieback" 
            android:clickable="true"/>
            </LinearLayout>
        	<TextView 
	    android:layout_width="wrap_content"
		android:layout_height="30dp"
		android:id="@+id/mycinema"
		android:layout_marginBottom="10dp"
		android:textColor="@color/lightwhite"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="20dp"
		android:textSize="25sp"
		android:text="asdadad"
	    />
        <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_weight="1">
        <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:src="@drawable/ic_mine_my_collection"
        android:layout_gravity="right|center_vertical"
        android:scaleType="centerInside" />
            </LinearLayout>
    </LinearLayout>
    
        <TextView 
            android:layout_marginTop="10dp"
        android:id="@+id/mycinema1"
        android:textSize="18sp"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:text="11111asd"
		/>
    
    <TextView 
        android:id="@+id/myaddress"
        android:textSize="12sp"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:textColor="@color/background_bg3"
		android:text="2222da"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/taocan_bg"
        android:orientation="vertical" >
        	
        <TextView 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="观影套餐"
            android:textSize="15sp"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/textcolor_red_text"
            />
        <TextView 
            
            android:layout_marginLeft="10dp"
            android:text="小吃、周边6.9元起"
            android:textSize="12sp"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/textcolor_red_text"
            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/moviedetails_bg"
        android:orientation="vertical"
		android:gravity="center" >
        
        <ImageView
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/poster"
			
            />
        
</LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
		android:gravity="center" 
        >

        <TextView
            android:id="@+id/mymovie"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center" 
            android:textSize="20sp"
            android:text="dasdasd" />
        
    </LinearLayout>

    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="2016-10-10"
        android:textSize="12sp"
        android:gravity="center" 
        android:id="@+id/mytime"
        />
    <ListView 
        android:id="@+id/list_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        ></ListView>
    
</LinearLayout>
