<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_bg1"
        android:orientation="horizontal" >
         <ImageView
            android:id="@+id/moveback"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/movieback" 
            android:clickable="true"/>
        	<TextView 
	    android:layout_width="wrap_content"
		android:layout_height="30dp"
		android:textColor="@color/lightwhite"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="20dp"
		android:layout_marginBottom="10dp"
		android:textSize="25sp"
		android:text="@string/querenorder"
	    />
    </LinearLayout>
    
     <TextView 
         android:id="@+id/ordermoviename"
         android:layout_width="match_parent"
		 android:layout_height="30dp"
		 android:textSize="22sp"
		 android:text="baiduren"
		 android:layout_marginTop="10dp"
		 android:layout_marginLeft="10dp"
         />
          <TextView 
         android:id="@+id/orderdatetime"
         android:layout_width="match_parent"
		 android:layout_height="25dp"
		 android:textSize="22sp"
		 android:layout_marginTop="10dp"
		 android:layout_marginLeft="10dp"
		 android:textColor="@color/textcolor_red_d"
		 android:text="11-11-11-11"
         />
     
               <TextView 
         android:id="@+id/ordercinema"
         android:layout_width="match_parent"
		 android:layout_height="25dp"
		 android:textSize="20sp"
		 android:layout_marginTop="10dp"
		 android:layout_marginLeft="10dp"
		 android:text="asdw ads w aw d"
         />
                         <TextView 
         android:id="@+id/orderseat"
         android:layout_width="match_parent"
		 android:layout_height="25dp"
		 android:textSize="20sp"
		 android:layout_marginTop="10dp"
		 android:layout_marginLeft="10dp"
		 android:text="6da6da"
         />
     
 <LinearLayout
android:id="@+id/content" 
android:layout_width="fill_parent" 
android:layout_height="0dp" 
android:layout_weight="1" 
android:orientation="vertical" 
/> 
<LinearLayout
android:id="@+id/bottom_panel" 
android:layout_width="fill_parent" 
android:layout_height="wrap_content"
android:orientation="horizontal" 
> 
<TextView 
    android:id="@+id/orderprice"
    android:layout_width="180dp"
	android:layout_height="wrap_content"
	android:textSize="25sp"
	android:textColor="@color/textcolor_red_text"
	android:layout_marginLeft="10dp"
	android:text="33yan"
    />
<Button
android:id="@+id/doorder" 
android:layout_width="0dp" 
android:layout_height="wrap_content" 
android:layout_marginLeft="10dp"
android:layout_marginBottom="10dp"
android:layout_marginRight="20dp"
android:layout_weight="1" 
android:background="#FFA500"
android:layout_gravity="center_vertical" 
android:text="@string/querenorder" 
/> 
</LinearLayout>          

</LinearLayout>
