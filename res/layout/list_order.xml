<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@color/textcolor_white_a" >
    
    <TextView
        android:id="@+id/ordercinema"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="柒章影城"
        android:textColor="@color/lightgray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView 
        android:layout_width="80dp"
        android:layout_height="110dp"
                android:scaleType="fitCenter"
        android:src="@drawable/poster"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" 
            />
        <LinearLayout 
            android:layout_width="match_parent"
			android:layout_height="100dp"
			android:orientation="vertical"
			android:layout_marginLeft="10dp"
			 android:layout_marginTop="10dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:text="xiaowangzi2zhang"
                android:textSize="20sp"
                android:id="@+id/ordermovie"
                />
                <TextView 
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:text="2015-10-16"
                 android:textColor="@color/lightgray"
                 android:id="@+id/ordertime"
                />
                <TextView 
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:text="jipai7zuo"
                 android:textColor="@color/lightgray"
                 android:id="@+id/orderseat"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView 
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="zongjia 30"
                android:id="@+id/orderprice"
        />
    
</LinearLayout>
